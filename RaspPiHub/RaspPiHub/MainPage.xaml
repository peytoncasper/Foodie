<Page
    x:Class="RaspPiHub.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaspPiHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="Connect to HC-06" HorizontalAlignment="Left" Margin="91,95,0,0" VerticalAlignment="Top" Width="190" Click="button_Click"/>
        <Button x:Name="verify" Content="Send Verification Request" HorizontalAlignment="Left" Margin="91,132,0,0" VerticalAlignment="Top" Width="190" Click="verify_Click"/>
        <Button x:Name="disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="91,206,0,0" VerticalAlignment="Top" Width="190" Click="disconnect_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="91,374,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Page>
