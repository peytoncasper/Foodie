<Page
    x:Class="RaspPiHub.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaspPiHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF191919">
        <Button x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="319,399,0,0" VerticalAlignment="Top" RequestedTheme="Dark" Click="Refresh_Click"/>
        <ListView x:Name="Devices_List" HorizontalAlignment="Left" Height="198" Margin="319,196,0,0" VerticalAlignment="Top" Width="387" RequestedTheme="Dark" BorderBrush="#FFB0B0B0" BorderThickness="2" >

        </ListView>
        <Button x:Name="AddDevice" Content="Add Device" HorizontalAlignment="Left" Margin="610,399,0,0" VerticalAlignment="Top" RequestedTheme="Dark" Click="AddDevice_Click"/>
        <Button x:Name="RemoveDevice" Content="Remove Device" HorizontalAlignment="Left" Margin="442,399,0,0" VerticalAlignment="Top" RequestedTheme="Dark" Click="RemoveDevice_Click"/>
        <TextBlock x:Name="ErrorMessage" HorizontalAlignment="Left" Margin="319,171,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>
</Page>
